---
const navItems = [
	{ name: 'Home', href: '/' },
	{ name: 'Blog', href: '/blog' },
	{ name: 'Projects', href: '/projects' },
	{ name: 'Config', href: '/config' },
	{ name: 'About', href: '/about' },
];
---

<nav class="bg-ctp-mantle border-b border-ctp-surface0 py-4">
	<div class="container mx-auto px-4 flex justify-between items-center">
		<a href="/" class="text-xl font-bold text-ctp-lavender hover:text-ctp-mauve transition-colors font-mono">
			&gt; shaggy-star
		</a>
		<ul class="flex space-x-6">
			{
				navItems.map((item) => (
					<li>
						<a
							href={item.href}
							class="text-ctp-text hover:text-ctp-blue transition-colors font-medium"
						>
							{item.name}
						</a>
					</li>
				))
			}
		</ul>
	</div>
</nav>
