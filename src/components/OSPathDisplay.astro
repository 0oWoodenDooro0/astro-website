---
interface Props {
  linux: string;
  mac: string;
  windows: string;
}

const { linux, mac, windows } = Astro.props;
---

<div class="grid grid-cols-1 md:grid-cols-3 gap-4 font-mono text-xs">
  <div class="bg-ctp-mantle p-4 rounded-lg border border-ctp-surface0">
    <div class="text-ctp-mauve font-bold mb-2 flex items-center gap-2">
      <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="18" height="18" x="3" y="3" rx="2" ry="2"/><path d="M12 3v18"/><path d="M3 12h18"/></svg>
      LINUX
    </div>
    <code class="text-ctp-text break-all">{linux}</code>
  </div>
  <div class="bg-ctp-mantle p-4 rounded-lg border border-ctp-surface0">
    <div class="text-ctp-blue font-bold mb-2 flex items-center gap-2">
      <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 20.94c1.88-1.1 3.23-2.9 3.74-4.94"/><path d="M18 16.29c1.17-.76 2.1-1.85 2.62-3.12"/><path d="M4.75 18.11 8 12.28"/><path d="M7 15.68 10 17.5"/><path d="M5.87 21 9 15.17"/><path d="M10.11 17.09 13 18.91"/><path d="m15.42 13.17 3.25 5.83"/><path d="m13.75 14.11 3 5.33"/><path d="m17.09 10.11 2.91 5.31"/><path d="m14.11 13.75 5.33 3"/></svg>
      MACOS
    </div>
    <code class="text-ctp-text break-all">{mac}</code>
  </div>
  <div class="bg-ctp-mantle p-4 rounded-lg border border-ctp-surface0">
    <div class="text-ctp-sky font-bold mb-2 flex items-center gap-2">
      <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="18" height="18" x="3" y="3" rx="2" ry="2"/><path d="M3 12h18"/><path d="M12 3v18"/></svg>
      WINDOWS
    </div>
    <code class="text-ctp-text break-all">{windows}</code>
  </div>
</div>
