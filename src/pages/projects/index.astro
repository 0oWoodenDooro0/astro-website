---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

const projects = (await getCollection('projects')).sort(
	(a, b) => b.data.priority - a.data.priority
);
---

<Layout title="Projects | shaggy-star">
	<main class="container mx-auto px-4 py-12">
		<header class="mb-12">
			<h1 class="text-4xl font-bold text-ctp-pink mb-4 font-mono">&gt; ~/projects</h1>
			<p class="text-ctp-subtext1">A collection of my recent work, open source contributions, and experiments.</p>
		</header>

		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
			{
				projects.map((project) => (
					<div class="relative flex flex-col bg-ctp-mantle border border-ctp-surface0 rounded-lg overflow-hidden hover:border-ctp-pink transition-all group">
						<div class="p-6 flex-grow">
							<div class="flex items-start justify-between mb-4">
								<div class="bg-ctp-surface1 p-2 rounded-lg text-ctp-pink group-hover:text-ctp-mauve transition-colors">
									<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"/></svg>
								</div>
								{project.data.githubLink && (
									<a
										href={project.data.githubLink}
										target="_blank"
										rel="noopener noreferrer"
										class="relative z-10 text-ctp-overlay2 hover:text-ctp-pink transition-colors"
										aria-label="GitHub Repository"
									>
										<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>
									</a>
								)}
							</div>
							<h2 class="text-2xl font-bold text-ctp-pink mb-3 group-hover:text-ctp-mauve transition-colors">
								<a href={`/projects/${project.id}`} class="before:absolute before:inset-0 focus:outline-none">
									{project.data.title}
								</a>
							</h2>
							<p class="text-ctp-text mb-6 line-clamp-3 leading-relaxed">
								{project.data.description}
							</p>
						</div>
						<div class="px-6 py-4 bg-ctp-crust border-t border-ctp-surface0 flex flex-wrap gap-2">
							{project.data.techStack.map((tech) => (
								<span class="text-[10px] font-mono font-bold uppercase tracking-wider text-ctp-subtext0 bg-ctp-surface0 px-2 py-0.5 rounded">
									{tech}
								</span>
							))}
						</div>
					</div>
				))
			}
		</div>
	</main>
</Layout>
