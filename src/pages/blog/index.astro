---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title="Blog | shaggy-star">
	<main class="container mx-auto px-4 py-12 max-w-4xl">
		<header class="mb-12">
			<h1 class="text-4xl font-bold text-ctp-lavender mb-4 font-mono">&gt; ~/blog</h1>
			<p class="text-ctp-subtext1">Technical logs, personal thoughts, and progress updates.</p>
		</header>

		<div class="grid gap-8">
			{
				posts.map((post) => (
					<article class="group relative bg-ctp-mantle border border-ctp-surface0 rounded-lg p-6 hover:border-ctp-blue transition-all">
						<div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
							<div class="flex-grow">
								<div class="flex items-center gap-3 mb-2">
									<time datetime={post.data.pubDate.toISOString()} class="text-xs font-mono text-ctp-overlay2">
										{post.data.pubDate.toLocaleDateString('en-us', {
											year: 'numeric',
											month: 'short',
											day: 'numeric',
										})}
									</time>
									{post.data.tags && post.data.tags.map(tag => (
										<span class="text-[10px] uppercase tracking-wider px-1.5 py-0.5 rounded bg-ctp-surface1 text-ctp-blue font-bold">
											{tag}
										</span>
									))}
								</div>
								<h2 class="text-2xl font-bold text-ctp-blue group-hover:text-ctp-sapphire transition-colors mb-2">
									<a href={`/blog/${post.id}/`}>
										{post.data.title}
										<span class="absolute inset-0" />
									</a>
								</h2>
								<p class="text-ctp-text line-clamp-2">{post.data.description}</p>
							</div>
							<div class="text-ctp-surface2 group-hover:text-ctp-blue transition-colors hidden md:block">
								<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m9 18 6-6-6-6"/></svg>
							</div>
						</div>
					</article>
				))
			}
		</div>
	</main>
</Layout>
