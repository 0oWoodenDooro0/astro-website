---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title="Blog">
	<main class="container mx-auto px-4 py-8">
		<h1 class="text-4xl font-bold text-ctp-lavender mb-8">Blog Posts</h1>
		<ul class="space-y-6">
			{
				posts.map((post) => (
					<li class="border-b border-ctp-surface0 pb-6">
						<a href={`/blog/${post.id}/`} class="group">
							<h2 class="text-2xl font-semibold text-ctp-blue group-hover:text-ctp-sapphire transition-colors">
								{post.data.title}
							</h2>
							<p class="text-ctp-subtext1 text-sm mb-2">
								{post.data.pubDate.toLocaleDateString('en-us', {
									year: 'numeric',
									month: 'short',
									day: 'numeric',
								})}
							</p>
							<p class="text-ctp-text">{post.data.description}</p>
						</a>
					</li>
				))
			}
		</ul>
	</main>
</Layout>
