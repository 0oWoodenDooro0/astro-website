---
import '../styles/global.css';
import '@fontsource/jetbrains-mono';
import Navigation from '../components/Navigation.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="mocha">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-ctp-base text-ctp-text font-mono antialiased min-h-screen flex flex-col">
		<Navigation />
		<div class="flex-grow">
			<slot />
		</div>
		<footer class="py-8 text-center text-ctp-surface2 text-sm border-t border-ctp-surface0 mt-auto">
			<p>&copy; {new Date().getFullYear()} shaggy-star. Built with Astro & Catppuccin.</p>
		</footer>
	</body>
</html>
